{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Implementação do tabnews para o curso.dev",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run services:wait:database && npm run migrate:up && next dev",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "node infra/scripts/wait-for-postgres.js",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "test": "npm run services:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "posttest": "npm run services:stop",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "migrate:create": "node-pg-migrate -m infra/migrations create",
    "migrate:up": "node-pg-migrate -m infra/migrations --envPath .env.development up"
  },
  "author": "Juan Versolato Lopes",
  "license": "MIT",
  "dependencies": {
    "async-retry": "1.3.3",
    "dotenv": "16.4.5",
    "dotenv-expand": "11.0.6",
    "next": "14.2.13",
    "node-pg-migrate": "7.6.1",
    "pg": "8.13.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-icons": "5.4.0",
    "swr": "2.2.5"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "concurrently": "9.0.1",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.13",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.8.3",
    "jest": "29.7.0",
    "postcss": "^8.4.49",
    "prettier": "3.3.3",
    "secretlint": "^9.0.0",
    "tailwindcss": "^3.4.16"
  }
}
